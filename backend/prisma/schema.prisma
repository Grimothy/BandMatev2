generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?   // Nullable for OAuth users
  name          String
  role          String    @default("MEMBER") // ADMIN or MEMBER
  authProvider  String    @default("local") // "local", "google"
  providerId    String?   // External provider's user ID
  avatarUrl     String?   // Profile picture from OAuth provider
  lastLogin     DateTime? // Last successful login timestamp
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  projects      ProjectMember[]
  comments      Comment[]
  managedFiles  ManagedFile[]
  notifications Notification[]
  invitations   Invitation[]
  activities    Activity[]

  @@index([authProvider, providerId])
}

model Project {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique // Filesystem-safe, immutable identifier
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members    ProjectMember[]
  vibes      Vibe[]
  activities Activity[]
}

model ProjectMember {
  id             String  @id @default(uuid())
  userId         String
  projectId      String
  canCreateVibes Boolean @default(true)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model Vibe {
  id        String   @id @default(uuid())
  name      String
  slug      String   // Filesystem-safe, immutable identifier
  image     String?
  theme     String?
  notes     String?
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cuts         Cut[]

  @@unique([projectId, slug]) // Slug unique within project
}

model Cut {
  id            String   @id @default(uuid())
  name          String
  slug          String   // Filesystem-safe, immutable identifier
  vibeId        String
  order         Int      @default(0) // For ordering cuts within a vibe
  lyrics        String?  // JSON string: array of { managedFileId, lines: [{ timestamp, text }] }
  bpm           Int?     // Beats per minute (e.g., 120)
  timeSignature String?  // Time signature (e.g., "4/4", "3/4", "6/8")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  vibe         Vibe          @relation(fields: [vibeId], references: [id], onDelete: Cascade)
  managedFiles ManagedFile[]
  comments     Comment[]

  @@unique([vibeId, slug]) // Slug unique within vibe
}

model Comment {
  id            String   @id @default(uuid())
  content       String
  timestamp     Float?   // Optional for replies (inherited from parent)
  managedFileId String   // Reference to the audio file (ManagedFile with type="CUT")
  cutId         String
  userId        String
  parentId      String?  // For reply threading - null means top-level comment
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  managedFile ManagedFile @relation(fields: [managedFileId], references: [id], onDelete: Cascade)
  cut         Cut         @relation(fields: [cutId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent      Comment?    @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[]   @relation("CommentReplies")

  @@index([cutId])
  @@index([managedFileId])
  @@index([userId])
}

model ManagedFile {
  id           String   @id @default(uuid())
  name         String?  // Optional user-defined name/label
  filename     String   // UUID filename on disk
  originalName String   // Original filename from upload
  path         String   // Relative path to file
  fileSize     Int      // Size in bytes
  mimeType     String   // MIME type
  type         String   // "CUT" (audio) or "STEM" (zip)
  
  // Audio-specific fields (only used when type="CUT")
  duration     Float?   // Audio duration in seconds
  waveformData String?  // Cached waveform data for visualization
  
  // Public sharing
  isPublic     Boolean  @default(false)
  shareToken   String?  @unique  // UUID token for public share links
  
  // Hierarchy linkage - cutId required, vibeId/projectId derivable via relations
  cutId        String
  uploadedById String
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cut        Cut       @relation(fields: [cutId], references: [id], onDelete: Cascade)
  uploadedBy User      @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  comments   Comment[]

  @@index([cutId])
  @@index([uploadedById])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Notification {
  id           String   @id @default(uuid())
  recipientId  String
  type         String   // "INFO", "SUCCESS", "WARNING", "ERROR"
  title        String
  message      String
  resourceLink String?  // e.g. "/projects/my-band/vibes"
  isRead       Boolean  @default(false)
  emailSent    Boolean  @default(false)
  createdAt    DateTime @default(now())

  recipient User @relation(fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([recipientId])
}

model Invitation {
  id          String    @id @default(uuid())
  token       String    @unique
  email       String
  name        String?
  role        String    @default("MEMBER") // ADMIN or MEMBER
  projectIds  String?   // JSON array of project IDs to add user to
  invitedById String
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdAt   DateTime  @default(now())

  invitedBy   User      @relation(fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([invitedById])
  @@index([email])
}

model Activity {
  id          String   @id @default(uuid())
  type        String   // "file_uploaded", "cut_created", "vibe_created", "member_added", "comment_added", "project_created", "lyrics_updated", "file_shared"
  userId      String   // Actor who performed the action
  projectId   String   // Project where activity occurred
  metadata    String?  // JSON string with additional data (file name, cut name, etc.)
  resourceLink String? // Link to the resource (e.g., "/projects/slug/vibes/slug/cuts/slug")
  createdAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  reads   ActivityRead[]

  @@index([projectId, createdAt])
  @@index([userId])
}

// Track which activities have been read/dismissed by which users
model ActivityRead {
  id         String   @id @default(uuid())
  activityId String
  userId     String
  readAt     DateTime @default(now())
  dismissed  Boolean  @default(false)

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@unique([activityId, userId])
  @@index([userId])
  @@index([activityId])
}
